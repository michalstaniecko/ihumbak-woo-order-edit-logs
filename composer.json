{
  "name": "ihumbak/woo-order-edit-logs",
  "description": "WooCommerce Order Edit Logs - Plugin WordPress do automatycznego zbierania i przechowywania szczegółowych logów wszystkich zmian przeprowadzanych w zamówieniach WooCommerce",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Michał Staniećko",
      "email": "michal.staniecko@ihumbak.com"
    }
  ],
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "squizlabs/php_codesniffer": "^3.7",
    "wp-coding-standards/wpcs": "^3.0",
    "phpstan/phpstan": "^1.10",
    "phpstan/extension-installer": "^1.3",
    "szepeviktor/phpstan-wordpress": "^1.3",
    "yoast/phpunit-polyfills": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "IHumBak\\WooOrderEditLogs\\": "includes/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "IHumBak\\WooOrderEditLogs\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "lint": "phpcs",
    "lint:fix": "phpcbf",
    "test": "phpunit",
    "analyze": "phpstan analyse"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "phpstan/extension-installer": true
    }
  }
}
